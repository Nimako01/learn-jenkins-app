pipeline {
    agent any

    stages {
        // Install dependencies and build the project
        stage('Build') {
            agent {
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                // Use sh to run shell commands inside the Docker container
                sh '''
                ls -la
                node --version  
                npm --version
                npm ci
                npm run build
                ls -la
                '''
            }
        }
        stage('Test'){
            // Run tests inside a Docker container
            agent {
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                // Verify build output and run tests
                sh '''
                    test -f build/index.html
                    npm run test
                '''

            }
        }

                stage('E2E'){
            // Run tests inside a Docker container
            agent {
                docker{
                    image 'mcr.microsoft.com/playwright:v1.56.1-noble'
                    reuseNode true
                    // args '-u root:root '

                }
            }
            steps {
                // Verify build output and run tests
                sh '''
                    npm ci
                    npx serve -s build --no-clipboard &
                    sleep 5
                    npx playwright test 
                '''

            }
        }
    }

    post {
        // test results and build artifacts archiving
        always {
            junit 'test-results/junit.xml'
            archiveArtifacts artifacts: 'build/**', fingerprint: true
        }
    }
}
